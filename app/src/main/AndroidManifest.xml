<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TourismPLaces"
            android:label="Tourism Places"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".activities.MetroStation"
            android:label="Metro Station (Line 2)"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".activities.HotelAndHospital"
            android:label="Hotels And Hospitals"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".activities.FoodAndDrink"
            android:label="Foods And Drinks"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>